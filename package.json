{
  "name": "smartmeal-monorepo",
  "private": true,
  "workspaces": ["client", "admin", "server"],
  "scripts": {
    "start:client": "cd client && npm start",
    "start:admin": "cd admin && npm start",
    "start:server": "cd server && npm start",
    "dev": "concurrently \"npm:start:server\" \"npm:start:client\" \"npm:start:admin\"",
    "build": "cd client && npm run build && cd ../admin && npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  }
}
